{
  "env": {
    "es2021": false,
    "node": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint/recommended"],
  "rules": {
    "require-await": "error",
    "no-unused-vars": "off",
    "semi": "off",
    "space-before-function-paren": "off"
  }
}
